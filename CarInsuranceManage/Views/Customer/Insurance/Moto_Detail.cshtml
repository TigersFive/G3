        }
        bv_validate_personal_contact = $("#frmPersonalContact").validate({
            errorElement: 'div',
            rules: {
                name: { required: true },
                phone: { required: true, chkPhone: true },
                email: { required: true, chkEmail: true },
                city: { required: true }
